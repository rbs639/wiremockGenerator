export interface WiremockMapping {
  id: string;
  request: {
    method: string;
    url?: string;
    urlPattern?: string;
    headers?: Record<string, any>;
    bodyPatterns?: any[];
  };
  response: {
    status: number;
    headers?: Record<string, string>;
    body?: string;
    jsonBody?: any;
    bodyFileName?: string;
  };
  priority?: number;
  scenarioName?: string;
  requiredScenarioState?: string;
  newScenarioState?: string;
}

export interface JsonConfig {
  name: string;
  version: string;
  mappings: WiremockMapping[];
  baseUrl?: string;
  port?: number;
}

export interface ValidationResult {
  isValid: boolean;
  errors: string[];
  warnings: string[];
}

export interface User {
  id: string;
  username: string;
  role: 'Admin' | 'Write' | 'ReadOnly';
}