// ATOM Mock Generator Types based on the provided schema
export interface AuthConfig {
  type: 'none' | 'basic' | 'bearer';
  username?: string;
  password?: string;
  token?: string;
}

export interface TargetConfig {
  baseUrl: string;
  auth?: AuthConfig;
}

export interface DefaultsConfig {
  priority?: number;
  headers?: Record<string, string>;
  templating?: {
    enabled?: boolean;
  };
}

export interface RequestMatcher {
  equalTo?: string;
  contains?: string;
  matches?: string;
}

export interface RequestBodyPattern {
  equalToJson?: {
    json: string;
    ignoreExtraElements?: boolean;
    ignoreArrayOrder?: boolean;
  };
  matchesJsonPath?: string;
}

export interface MockRequest {
  method: 'GET' | 'POST' | 'PUT' | 'DELETE' | 'PATCH' | 'HEAD' | 'OPTIONS' | 'ANY';
  url?: string;
  urlPattern?: string;
  urlPath?: string;
  urlPathPattern?: string;
  pathTemplate?: string;
  queryParameters?: Record<string, RequestMatcher>;
  headers?: Record<string, RequestMatcher>;
  cookies?: Record<string, RequestMatcher>;
  bodyPatterns?: RequestBodyPattern[];
}

export interface ResponseBody {
  type: 'inline' | 'file';
  value?: string;
  fileName?: string;
  templating?: boolean;
}

export interface MockResponse {
  status: number;
  headers?: Record<string, string>;
  fixedDelayMilliseconds?: number;
  proxyBaseUrl?: string;
  body?: ResponseBody;
}

export interface ScenarioConfig {
  name?: string;
  requiredState?: string;
  newState?: string;
}

export interface MockConfig {
  name?: string;
  priority?: number;
  request: MockRequest;
  response: MockResponse;
  scenario?: ScenarioConfig;
  metadata?: Record<string, unknown>;
}

export interface ATOMConfig {
  version: string;
  target?: TargetConfig;
  defaults?: DefaultsConfig;
  mocks: MockConfig[];
}

export interface ValidationError {
  path: string;
  message: string;
  severity: 'error' | 'warning';
}

export interface ValidationResult {
  isValid: boolean;
  errors: ValidationError[];
  warnings: ValidationError[];
}

// Legacy types for backward compatibility
export interface WiremockMapping {
  id: string;
  request: {
    method: string;
    url?: string;
    urlPattern?: string;
    headers?: Record<string, RequestMatcher>;
    bodyPatterns?: RequestBodyPattern[];
  };
  response: {
    status: number;
    headers?: Record<string, string>;
    body?: string;
    jsonBody?: unknown;
    bodyFileName?: string;
  };
  priority?: number;
  scenarioName?: string;
  requiredScenarioState?: string;
  newScenarioState?: string;
}

export interface JsonConfig {
  name: string;
  version: string;
  mappings: WiremockMapping[];
  baseUrl?: string;
  port?: number;
}

export interface User {
  id: string;
  username: string;
  role: 'Admin' | 'Write' | 'ReadOnly';
}